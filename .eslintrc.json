{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:@darraghor/nestjs-typed/recommended", "prettier"],
  "plugins": [
    "@darraghor/eslint-plugin-nestjs-typed",
    "@typescript-eslint",
    "eslint-plugin-import"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}
